@model PrescriptionModel
@{
    string title = ViewBag.Action + " Prescription";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="MedicationName" class="form-label">MedicationName</label>
        <input asp-for="MedicationName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="FillStatus" class="form-label">Fill Status</label>
        <select asp-for="FillStatus" class="form-control">
            <option value="New">New</option>
            <option value="Filled">Filled</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label">Cost</label>
        <input asp-for="Cost" class="form-control">
    </div>
    
    <div class="mb-3">
        <label asp-for="RequestTime" class="form-label">RequestTime</label>
        <input asp-for="RequestTime" type="date" class="form-control">
    </div>

    <input type="hidden" asp-for="PrescriptionModelId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>
